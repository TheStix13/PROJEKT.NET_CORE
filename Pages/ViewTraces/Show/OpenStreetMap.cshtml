@page
@model Projekt.NET_CORE.Pages.OpenStreetMapModel
@{
    ViewData["Title"] = "OpenStreetMap";
}
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>GPX Trace Viewer</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="text/css" rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link type="text/css" rel="stylesheet" href="~/css/mapStyle.css" />
    <style>
        #sidebarCollapse {
            position: absolute;
            z-index: 9;
            background-color: #2f89fc;
            width: 50px;
            height: 50px;
            opacity: 1;
            text-align: center;
            margin-left: -30px;
        }

            #sidebarCollapse:hover {
                background-color: #174d91;
                opacity: 1;
            }

        #map {
            position: relative;
            margin-left: 0;
            height: 100vh;
            background-color: gray;
            padding: 0;
        }

        #bars {
            font-size: 30px;
            text-shadow: 1px 1px #000000;
            color: white;
        }
    </style>
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" class="btn" id="sidebarCollapse">
                    <i class="fa fa-bars" id="bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <h1><a href="index.html" class="logo">GPX Trace Viewer</a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a asp-page="/Index"><span class="fa fa-pencil mr-3"></span> Panel tras</a>
                </li>
                <li>
                    <a asp-page="/ViewTraces/Show/OpenStreetMap"><span class="fa fa-map mr-3"></span> OpenStreetMap</a>
                </li>
                <li>
                    <a asp-page="/ViewTraces/Show/BingMap"><span class="fa fa-map mr-3"></span> BingMap</a>
                </li>
                <li>
                    <a asp-page="/ViewTraces/Show/MapBox"><span class="fa fa-map mr-3"></span> MapBox</a>
                </li>
            </ul>
        </nav>

        <div id="content">
            <script src="https://unpkg.com/leaflet/dist/leaflet-src.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-gpx/1.4.0/gpx.min.js"></script>
            <div id="map"></div>
            <script>
                var map = new L.Map('map', {
                    zoomControl: false,
                    layers: [
                        new L.TileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            'attribution': 'Map data © <a href="http://openstreetmap.org">OpenStreetMap</a> contributors'
                        })
                    ],
                    center: [0, 0],
                    zoom: 0
                });
                const gpx = 'http://127.0.0.1:8887/0_1_mapstogpx20210119_154254%20(6).gpx'
                new L.GPX(gpx, { async: true }).on('loaded', function (e) {
                    map.fitBounds(e.target.getBounds());
                }).addTo(map);
            </script>

        </div>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    
</body>
</html>

